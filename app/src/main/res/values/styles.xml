<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderText">
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleText">
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="DescriptionText">
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="SmallText">
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="EditText">
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

</resources>
